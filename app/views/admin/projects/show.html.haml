.page-header

  .btn-group.pull-right
    %a.btn.btn-primary{ href: edit_admin_project_path(@project) }
      %i.icon-folder-close.icon-white
      Edit Project
    %a{ href: '#', class: "btn btn-primary dropdown-toggle", data: { toggle: "dropdown" } }
      %span.caret
    %ul.dropdown-menu
      %li= link_to 'Edit Project', edit_admin_project_path(@project)
      %li= link_to 'Delete Project', admin_project_path(@project), method: :delete, confirm: 'Are you sure that you want to permanently delete this project?'

  = title(@project.display_name, 'Showing project')

%h2 Overview
.well
  %dl.dl-horizontal
    %dt Name
    %dd= display @project.name

%h2 Details
.well.well-small
  %dl.dl-horizontal
    %dt Created at
    %dd= display @project.created_at

    %dt Updated at
    %dd= display @project.updated_at

