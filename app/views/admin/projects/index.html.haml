.page-header

  .btn-toolbar
    .btn-group.pull-right
      = link_to new_admin_project_path, class: 'btn btn-primary' do
        %i.icon-briefcase.icon-white
        New Project

  = title('Projects')

%table.table.table-striped.table-hover
  %thead
    %tr
      %th ID
      %th Name
      %th Actions
  %tbody
    - @projects.each do |project|
      %tr[project]
        %td= link_to project.id, admin_project_path(project)
        %td= link_to project.name, admin_project_path(project)
        %td
          .btn-group
            = link_to admin_project_path(project), class: 'btn btn-small btn-primary' do
              %i.icon-search.icon-white
              Show
            = link_to edit_admin_project_path(project), class: 'btn btn-small btn-warning' do
              %i.icon-edit.icon-white
              Edit
            = link_to(admin_project_path(project), method: :delete, confirm: 'Are you sure that you want to permanently delete this project?', class: 'btn btn-small btn-danger') do
              %i.icon-trash.icon-white
              Delete

= paginate @projects

