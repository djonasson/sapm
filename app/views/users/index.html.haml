.page-header

  .btn-group.pull-right
    %a.btn.btn-primary{ href: new_user_path }
      %i.icon-user.icon-white
      New User

  = title('Users', 'Subtext for header')

%table.table.table-striped.table-hover
  %thead
    %tr
      %th ID
      %th Name
      %th E-mail
      %th Actions
  %tbody
    - @users.each do |user|
      %tr
        %td= link_to user.id, user_path(user)
        %td= link_to user.name, user_path(user)
        %td= link_to user.email, user_path(user)
        %td
          .btn-toolbarz
            .btn-groupz
              = link_to 'Show', user_path(user), class: 'btn btn-small btn-primary'
              = link_to 'Edit', edit_user_path(user), class: 'btn btn-small btn-warning'
              = link_to 'Delete User', user_path(user), method: :delete, confirm: 'Are you sure that you want to permanently delete this user?', class: 'btn btn-small btn-danger'

= paginate @users
