.page-header
  = title('Forgot your password?')

= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form form-horizontal' }) do |f|
  = f.error_notification

  .form-inputs
    = f.input :email, label: 'E-mail', required: true, autofocus: true

  .form-actions
    = f.button :submit, 'Send me reset password instructions', class: 'btn-primary'

= render 'devise/shared/links'
