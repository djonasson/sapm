.navbar.navbar-fixed-top
  .navbar-inner
    .container-fluid
      %a{ class: "btn btn-navbar", data: { toggle: "collapse", target: ".nav-collapse" } }
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar

      %a.brand{ href: root_url  } SAPM

      - if user_signed_in?
        .btn-group.pull-right
          %a{ class: "btn dropdown-toggle", data: { toggle: "dropdown" }, href: "#" }
            %i.icon-user
            = current_user.display_name
            %span.caret
          %ul.dropdown-menu
            %li= link_to('Menu 1', '#')
            %li.divider
            %li= link_to(t('.my_account', default: 'My Account'), '#')#TODO: :edit_user_registration)
            %li.divider
            %li= link_to(t('.sign_out', default: 'Sign out'), :destroy_user_session, method: 'delete')
      - else
        .pull-right
          %ul.nav
            %li= link_to(t('.sign_in', default: 'Sign in'), :new_user_session)
            -#%li= link_to(t('.sign_up', default: 'Sign up'), '#') #TODO:new_user_registration_path)

      - if user_signed_in?
        .nav-collapse
          %ul.nav
            - if current_user.administrator?
              %li= link_to 'Users', admin_users_path
            %li= link_to 'Projects', '#'

