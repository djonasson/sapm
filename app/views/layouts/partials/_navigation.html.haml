.navbar.navbar-fixed-top
  .navbar-inner
    .container-fluid
      %a{ class: "btn btn-navbar", data: { toggle: "collapse", target: ".nav-collapse" } }
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar

      %a.brand{ href: root_url  } SAPM

      - if user_signed_in?
        .btn-toolbar.pull-right
          - if current_user.administrator?
            .btn-group
              %a{ class: "btn dropdown-toggle", data: { toggle: "dropdown" }, href: "#" }
                %i.icon-cog
                Administration
                %span.caret
              %ul.dropdown-menu
                %li= link_to 'Users', admin_users_path
                %li= link_to 'Projects', admin_projects_path
          .btn-group
            %a{ class: "btn dropdown-toggle", data: { toggle: "dropdown" }, href: "#" }
              %i.icon-user
              = current_user.display_name
              %span.caret
            %ul.dropdown-menu
              %li= link_to('My Profile', profile_path)
              %li.divider
              %li= link_to('Sign out', :destroy_user_session, method: 'delete')
      - else
        .pull-right
          %ul.nav
            %li= link_to(t('.sign_in', default: 'Sign in'), :new_user_session)
            -#%li= link_to(t('.sign_up', default: 'Sign up'), '#') #TODO:new_user_registration_path)

      - if user_signed_in?
        .nav-collapse
          %ul.nav
            %li= link_to 'Users', '#'
            %li= link_to 'Projects', '#'

        -#%form.navbar-search.pull-left
        -#  %input{ type: "text", class: "search-query", placeholder: "Search"}
